<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wall1"
    tools:context=".Login">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#80000000" />


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="30sp"
        android:fontFamily="@font/robotothin"
        android:textColor="@color/SplashText"
        android:text="Little Info Please," />

    <android.support.design.widget.TextInputEditText
        android:id="@+id/flightNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="250dp"
        android:singleLine="true"
        android:textColor="@color/SplashText"
        android:textSize="30sp"
        android:background="@drawable/login_round"
        android:padding="10dp"
        android:ems="8"
        android:gravity="center"
        android:textColorHint="@color/SplashText"
        android:fontFamily="@font/robotolight"
        android:layout_centerHorizontal="true"
        android:hint="Flight Number" />

    <android.support.design.widget.TextInputEditText
        android:id="@+id/PNRCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textColor="@color/SplashText"
        android:singleLine="true"
        android:layout_marginTop="350dp"
        android:background="@drawable/login_round"
        android:padding="10dp"
        android:ems="8"
        android:gravity="center"
        android:fontFamily="@font/robotolight"
        android:hint="PNR Number"
        android:textColorHint="@color/SplashText"
        android:textSize="30sp" />

    <Button
        android:id="@+id/submit"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="475dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/buttonTextColor"
        android:fontFamily="@font/robotobold"
        android:background="@drawable/button_round"
        android:text="SUBMIT" />

</RelativeLayout>